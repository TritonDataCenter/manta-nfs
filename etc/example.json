{
    "manta": {
        "_comment": "the Manta environment variables can be used instead",
        "keyFile": "/Users/foo/.ssh/id_rsa",
        "keyId": "70:c0:50:d6:9e:1f:0c:74:04:8b:08:c9:12:a2:7c:9f",
        "url": "https://us-east.manta.joyent.com",
        "user": "foo.bar"
    }
    "database": {
        "_comment": "the default DB is under /var/tmp/mfsdb, also tunables",
        "location": "/var/mantanfs",
        "max_files": 100,
        "sizeMB": 1024,
        "ttl": 3600
    },
    "portmap": {
        "_comment": "usehost forces use of the system's portmapper",
        "usehost": 1,
        "_comment2": "could do the following entries instead, but normally",
        "_comment3": "never need the portmap section at all",
        "address": "0.0.0.0",
        "port": 111,
        "mappings": {
            "mountd": [ {
                "prog": 100005,
                "vers": 3,
                "prot": 6,
                "port": 1892
              }, {
                "prog": 100005,
                "vers": 1,
                "prot": 6,
                "port": 1892
            }],
            "nfsd": [ {
                "prog": 100003,
                "vers": 3,
                "prot": 6,
                "port": 2049
            }],
            "portmapd": [ {
                "prog": 100000,
                "vers": 2,
                "prot": 6,
                "port": 111
            }]
        }
    },
    "mount": {
        "_comment": "set address if serving network beyond localhost",
        "address": "0.0.0.0",
        "_comment2": "can deny/allow mounting by given host addresses",
        "_comment3": "normally use only one of these lists",
        "hosts_deny": {
            "192.168.0.12": {},
            "192.168.0.13": {}
        },
        "hosts_allow": {
            "127.0.0.1": {},
            "192.168.0.10": {},
            "192.168.0.11": {}
        },
        "_comment4": "can limit access to Manta namespace",
        "exports": {
            "/user/public/foo": {},
            "/user/stor": {}
        }
    },
    "nfs": {
        "_comment": "set address if serving network beyond localhost",
        "address": "0.0.0.0",
        "_comment2": "can specify uid/gid for 'nobody' on clients",
        "uid": 65534,
        "gid": 65534,
        "_comment3": "tunables for file descriptor cache",
        "fd_cache": {
            "max": 50,
            "ttl": 15
        }
    }
}
